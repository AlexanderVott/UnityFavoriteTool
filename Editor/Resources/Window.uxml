<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="True">
    <ui:Template name="BaseControllerTemplate" src="BaseControllerTemplate.uxml" />
    <ui:Template name="ListsControllerTemplate" src="ListsControllerTemplate.uxml" />
    <ui:VisualElement style="height: 100%;">
        <ui:VisualElement name="tabs" style="flex-direction: row; flex-wrap: wrap; min-height: 18px;">
            <ui:Button text="Favorites" display-tooltip-when-elided="true" name="tab1" />
            <ui:Button text="Lists" display-tooltip-when-elided="true" name="tab2" />
            <ui:Button text="History" display-tooltip-when-elided="true" name="tab3" />
            <ui:Button text="Frequency" display-tooltip-when-elided="true" name="tab4" />
        </ui:VisualElement>
        <ui:VisualElement name="searchPanel" touch-scroll-type="Elastic" style="height: 24px; flex-shrink: 0; flex-grow: 0; min-height: auto; flex-basis: 24px;">
            <ui:TextField picking-mode="Ignore" label="Filter" multiline="false" name="filterField" style="align-items: stretch; justify-content: flex-start; flex-direction: row; flex-wrap: nowrap; height: auto;" />
        </ui:VisualElement>
        <ui:Instance name="FavoritesController" template="BaseControllerTemplate" style="height: 90%; flex-grow: 1; flex-direction: column;" />
        <ui:Instance name="ListsController" template="ListsControllerTemplate" style="height: 90%; flex-grow: 1;" />
        <ui:Instance name="HistoryController" template="BaseControllerTemplate" style="height: 90%; flex-grow: 1;" />
        <ui:Instance name="FrequencyController" template="BaseControllerTemplate" style="height: 90%; flex-grow: 1;" />
    </ui:VisualElement>
</ui:UXML>
